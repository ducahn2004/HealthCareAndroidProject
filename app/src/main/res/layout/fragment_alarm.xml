<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/android:windowBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Medication Alarm"
        android:textSize="20sp"
        android:textColor="?attr/colorPrimary"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Medication"
        android:textColor="?attr/android:textColorPrimary"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinner_medication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/surface_alternate"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Time"
        android:textColor="?attr/android:textColorPrimary"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_selected_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Time"
        android:textColor="?attr/android:textColorPrimary"
        android:background="@drawable/btn_google"
        android:padding="12dp"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat Pattern"
        android:textColor="?attr/android:textColorPrimary"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinner_repeat_pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/surface_alternate"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonStyle"/>

        <Button
            android:id="@+id/btn_save_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Alarm"
            style="?attr/materialButtonStyle"/>

    </LinearLayout>

</LinearLayout>