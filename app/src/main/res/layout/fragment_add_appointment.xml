<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.healthcareproject.present.medicine.AddAppointmentViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                app:tint="@color/primary_text_color"
                android:contentDescription="@string/back_button" />

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/add_appointment"
                android:textColor="@color/primary_text_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/tv_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/alert_text_color"
                android:background="@color/alert_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:visibility="gone"
                tools:text="Error saving appointment"
                tools:visibility="visible" />

            <!-- Form -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/surface_alternate"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Diagnosis -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diagnosis"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_diagnosis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:hint="@string/enter_diagnosis"
                        android:inputType="text"
                        android:text="@={viewModel.uiState.diagnosis}"
                        android:error="@{viewModel.uiState.diagnosisError}"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="18sp" />

                    <!-- Doctor -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/doctor"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:hint="@string/enter_doctor_name"
                        android:inputType="textPersonName"
                        android:text="@={viewModel.uiState.doctorName}"
                        android:error="@{viewModel.uiState.doctorNameError}"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="18sp" />

                    <!-- Clinic -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/clinic"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_clinic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:hint="@string/enter_clinic_name"
                        android:inputType="text"
                        android:text="@={viewModel.uiState.clinicName}"
                        android:error="@{viewModel.uiState.clinicNameError}"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="18sp" />

                    <!-- Treatment -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/treatment"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_treatment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:hint="@string/enter_treatment"
                        android:inputType="text"
                        android:text="@={viewModel.uiState.treatment}"
                        android:error="@{viewModel.uiState.treatmentError}"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="18sp" />

                    <!-- Date -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/date"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:hint="@string/enter_date"
                        android:inputType="none"
                        android:text="@{viewModel.uiState.visitDate != null ? viewModel.uiState.visitDate.toString() : ``}"
                        android:error="@{viewModel.uiState.dateError}"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="18sp"
                        android:focusable="false"
                        android:clickable="true" />

                    <!-- Time -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/time"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:hint="@string/enter_time"
                        android:inputType="none"
                        android:text="@{viewModel.uiState.time != null ? viewModel.uiState.time.toString() : ``}"
                        android:error="@{viewModel.uiState.timeError}"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="18sp"
                        android:focusable="false"
                        android:clickable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Save Button -->
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/primary_text_color"
                android:text="@string/save"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>