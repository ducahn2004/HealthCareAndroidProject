<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.healthcareproject.present.medicine.MedicineViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical History"
            android:textColor="@color/primary_text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp" />

        <!-- Search EditText -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Search visits..."
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/secondary_text_color"
            android:backgroundTint="@color/light_gray"
            android:layout_marginTop="8dp"
            android:drawableEnd="@android:drawable/ic_menu_close_clear_cancel"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.getLoadingVisibility()}"
            app:layout_constraintTop_toBottomOf="@id/et_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Future Visits Section -->
        <TextView
            android:id="@+id/tv_future_visits_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Visits"
            android:textColor="@color/primary_text_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/progress_bar"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- No Future Visits Message -->
        <TextView
            android:id="@+id/tv_no_future_visits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No upcoming visits available"
            android:textColor="@color/secondary_text_color"
            android:textSize="16sp"
            android:visibility="@{viewModel.getAfterEmptyVisibility()}"
            app:layout_constraintTop_toBottomOf="@id/tv_future_visits_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Future Visits RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAfter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/surface"
            app:layout_constraintTop_toBottomOf="@id/tv_no_future_visits"
            app:layout_constraintBottom_toTopOf="@id/tv_past_visits_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            tools:listitem="@layout/item_medical_visit" />

        <!-- Past Visits Section -->
        <TextView
            android:id="@+id/tv_past_visits_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past Visits"
            android:textColor="@color/primary_text_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewAfter"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- No Past Visits Message -->
        <TextView
            android:id="@+id/tv_no_past_visits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No past visits available"
            android:textColor="@color/secondary_text_color"
            android:textSize="16sp"
            android:visibility="@{viewModel.getBeforeEmptyVisibility()}"
            app:layout_constraintTop_toBottomOf="@id/tv_past_visits_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Past Visits RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBefore"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/surface"
            app:layout_constraintTop_toBottomOf="@id/tv_no_past_visits"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            tools:listitem="@layout/item_medical_visit" />

        <!-- Floating Action Button to Add Appointment -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="@color/fab_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>