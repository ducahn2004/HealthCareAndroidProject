<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/surface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Medication"
        android:textColor="@color/primary_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/et_medication_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Medication Name"
        android:textColor="@color/primary_text_color"
        android:textColorHint="@color/secondary_text_color"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/et_dosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Dosage (e.g., 1 tablet)"
        android:textColor="@color/primary_text_color"
        android:textColorHint="@color/secondary_text_color"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/et_frequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Frequency (e.g., Once a day)"
        android:textColor="@color/primary_text_color"
        android:textColorHint="@color/secondary_text_color"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/et_time_of_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Time of Day (e.g., Morning)"
        android:textColor="@color/primary_text_color"
        android:textColorHint="@color/secondary_text_color"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Select Start Date"
        android:textColor="@color/primary_text_color"
        android:textColorHint="@color/secondary_text_color"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Select End Date (optional)"
        android:textColor="@color/primary_text_color"
        android:textColorHint="@color/secondary_text_color"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/et_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Note (optional)"
        android:textColor="@color/primary_text_color"
        android:textColorHint="@color/secondary_text_color"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_gray"
            android:text="Cancel"
            android:textColor="@color/primary_text_color"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_accent_color"
            android:text="Add"
            android:textColor="@color/button_text_color" />
    </LinearLayout>
</LinearLayout>