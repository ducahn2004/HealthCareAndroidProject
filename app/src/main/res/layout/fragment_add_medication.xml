<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Add Medication Appointment"
            android:textColor="@color/primary_text_color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Appointment Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Appointment Details"
            android:textColor="@color/primary_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Condition"
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/secondary_text_color"
            android:backgroundTint="@color/light_gray"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/et_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Doctor"
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/secondary_text_color"
            android:backgroundTint="@color/light_gray"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/et_facility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Facility"
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/secondary_text_color"
            android:backgroundTint="@color/light_gray"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Select Date"
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/secondary_text_color"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Select Time"
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/secondary_text_color"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <!-- Medication Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Medications"
            android:textColor="@color/primary_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_medications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <Button
            android:id="@+id/btn_add_medication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/button_accent_color"
            android:text="Add Medication"
            android:textColor="@color/button_text_color"
            android:clickable="true"
            android:focusable="true" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/button_accent_color"
            android:text="Save"
            android:textColor="@color/button_text_color"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</ScrollView>