<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.healthcareproject.present.viewmodel.medicine.MedicalHistoryDetailViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="48dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medical Visit Details"
                    android:textColor="@color/primary_text_color"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Information Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Information"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    app:cardBackgroundColor="@color/surface_alternate"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Condition -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="CONDITION:"
                                android:textAllCaps="true"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@{viewModel.medicalVisit.diagnosis}"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="16sp"
                                tools:text="Hypertension" />
                        </LinearLayout>

                        <!-- Doctor -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="DOCTOR:"
                                android:textAllCaps="true"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@{viewModel.medicalVisit.doctorName}"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="16sp"
                                tools:text="Dr. John Smith" />
                        </LinearLayout>

                        <!-- Facility -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="FACILITY:"
                                android:textAllCaps="true"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@{viewModel.medicalVisit.clinicName}"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="16sp"
                                tools:text="City Hospital" />
                        </LinearLayout>

                        <!-- Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="DATE:"
                                android:textAllCaps="true"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@{viewModel.formattedDate}"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="16sp"
                                tools:text="01/05/2025" />
                        </LinearLayout>

                        <!-- Time -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TIME:"
                                android:textAllCaps="true"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@{viewModel.formattedTime}"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="16sp"
                                tools:text="10:00 AM" />
                        </LinearLayout>

                        <!-- Location -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="LOCATION:"
                                android:textAllCaps="true"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@{viewModel.medicalVisit.clinicName}"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="16sp"
                                tools:text="City Hospital" />
                        </LinearLayout>

                        <!-- Diagnosis -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="DIAGNOSIS:"
                                android:textAllCaps="true"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@{viewModel.medicalVisit.diagnosis}"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="16sp"
                                tools:text="Hypertension" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Doctor Remarks -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Doctor Remarks"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    app:cardBackgroundColor="@color/surface_alternate"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="@{viewModel.medicalVisit.treatment ?? `None`}"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="16sp"
                        tools:text="Rest and medication prescribed" />
                </androidx.cardview.widget.CardView>

                <!-- Medications -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Medications"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    app:cardBackgroundColor="@color/surface_alternate"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_medications"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_medication" />
                        <TextView
                            android:id="@+id/tv_empty_medications"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/no_medications"
                            android:textColor="@color/secondary_text_color"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:visibility="@{viewModel.medications.isEmpty() ? View.VISIBLE : View.GONE}"
                            tools:visibility="visible" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
                tools:visibility="gone" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/tv_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.error}"
                android:textColor="@color/alert_text_color"
                android:textSize="16sp"
                android:padding="12dp"
                android:visibility="@{viewModel.error != null ? View.VISIBLE : View.GONE}"
                tools:text="Error loading data" />
        </RelativeLayout>
    </ScrollView>
</layout>