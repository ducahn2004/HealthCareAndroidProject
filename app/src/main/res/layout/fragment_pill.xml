<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.healthcareproject.present.ui.medication.PillViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pill Management"
            android:textColor="@color/primary_text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp" />

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
            android:contentDescription="Loading medications"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Current Medications Title -->
        <TextView
            android:id="@+id/tv_current_medications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Medications"
            android:textColor="@color/primary_text_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- No Current Medications Message -->
        <TextView
            android:id="@+id/tv_no_current_medications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No current medications available"
            android:textColor="@color/secondary_text_color"
            android:textSize="16sp"
            android:visibility="@{viewModel.noCurrentMedicationsVisibility}"
            app:layout_constraintTop_toBottomOf="@id/tv_current_medications"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Current Medications RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_current_medications"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/surface"
            android:contentDescription="List of current medications"
            app:layout_constraintTop_toBottomOf="@id/tv_no_current_medications"
            app:layout_constraintBottom_toTopOf="@id/tv_past_medications"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.35"
            android:layout_marginBottom="16dp"
            tools:listitem="@layout/item_medication" />

        <!-- Past Medications Title -->

        <!-- No Past Medications Message -->

        <TextView
            android:id="@+id/tv_past_medications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Past Medications"
            android:textColor="@color/primary_text_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_current_medications" />

        <TextView
            android:id="@+id/tv_no_past_medications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No past medications available"
            android:textColor="@color/secondary_text_color"
            android:textSize="16sp"
            android:visibility="@{viewModel.noPastMedicationsVisibility}"
            app:layout_constraintTop_toBottomOf="@id/tv_past_medications"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Past Medications RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_past_medications"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/surface"
            android:contentDescription="List of past medications"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_no_past_medications"
            tools:listitem="@layout/item_medication" />

        <!-- Floating Action Button to Add Medication -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_medication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Add new medication"
            app:backgroundTint="@color/fab_background"
            app:tint="@color/fab_icon_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="24dp"
            app:elevation="8dp"
            app:useCompatPadding="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>