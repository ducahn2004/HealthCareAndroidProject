<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pill Management"
        android:textColor="@color/primary_text_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Current Medications Title -->
    <TextView
        android:id="@+id/tv_current_medications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Medications"
        android:textColor="@color/primary_text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Current Medications RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_current_medications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/surface"
        app:layout_constraintTop_toBottomOf="@id/tv_current_medications"
        app:layout_constraintBottom_toTopOf="@id/tv_past_medications"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35"
        android:layout_marginBottom="16dp" />

    <!-- Past Medications Title -->
    <TextView
        android:id="@+id/tv_past_medications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past Medications"
        android:textColor="@color/primary_text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/rv_current_medications"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Past Medications RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_past_medications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/surface"
        app:layout_constraintTop_toBottomOf="@id/tv_past_medications"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Floating Action Button to Add Medication -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_medication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/fab_background"
        app:tint="@color/fab_icon_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>