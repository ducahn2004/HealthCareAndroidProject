<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Background color for the selected tab -->
    <solid android:color="?attr/colorSecondary" /> <!-- Use colorSecondary (teal_200) -->
    <!-- Add rounded corners -->
    <corners android:radius="8dp" />
    <!-- Add a border -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorSecondaryVariant" /> <!-- Use colorSecondaryVariant (teal_700) -->
</shape>